<!DOCTYPE html>
<html>
    <head>
        <link href="/styles/catalogo.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="/styles/header.css" />
        <link href="https://fonts.googleapis.com/css2?family=Train+One&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <link href="/styles/bootstrap.css" rel="stylesheet" type="text/css" />
        <script src="js/bootstrap.bundle.js"></script>
    </head>

    <body class="container">
        <%- include('header') %>
        <form action="/catalogo/edit/" method="POST">
            <input type="hidden" name="vj_id" value="<%= videojuego.id %>">
            <div>
                <label class="form-label">Nombre</label>
                <input value="<%= videojuego.name %>" name="vj_name" type="text" class="form-control" />
            </div>
            <div>
                <label class="form-label">Precio</label>
                <input value="<%= videojuego.price %>" name="vj_price" type="number" class="form-control" />
            </div>
            <div>
                <label class="form-label">Categoría</label>
                <select name="vj_category" class="form-select">
                    <option value="-1">Seleccione una categoría</option>
                    <% categorias.forEach((cat) =>{ %>
                        <% if (cat.id == videojuego.idCategory) { %>
                            <option value="<%= cat.id %>" selected=true><%= cat.nombre %></option>
                        <% }else{ %>
                            <option value="<%= cat.id %>"><%= cat.nombre %></option>
                        <% } %>
                    <% }) %>
                </select>
            </div>
            <div id="mensajes" class="mt-3">
            </div>
            <div class="modal-footer">
                <a href="/catalogo" id="modal_but_cancelar" class="btn btn-success" type="button">
                    Cancelar
                </a>
                <button id="modal_but_grabar" class="btn btn-success" type="submit">
                    Grabar
                </button>
            </div>
        </form>            
    </body>
</html>